<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fun.timu.oj.judge.mapper.ProblemTagMapper">

    <resultMap id="BaseResultMap" type="fun.timu.oj.judge.model.DO.ProblemTagDO">
        <id property="id" column="id"/>
        <result property="tagName" column="tag_name"/>
        <result property="tagNameEn" column="tag_name_en"/>
        <result property="tagColor" column="tag_color"/>
        <result property="category" column="category"/>
        <result property="usageCount" column="usage_count"/>
        <result property="status" column="STATUS"/>
        <result property="description" column="description"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,tag_name,tag_name_en,tag_color,category,usage_count,
        STATUS,description,is_deleted,created_at,updated_at
    </sql>

    <!-- 批量增加标签使用次数 -->
    <update id="batchIncrementUsageCount">
        UPDATE problem_tag 
        SET usage_count = usage_count + #{increment},
            updated_at = CURRENT_TIMESTAMP
        WHERE id IN
        <foreach collection="tagIds" item="tagId" open="(" separator="," close=")">
            #{tagId}
        </foreach>
        AND is_deleted = 0
    </update>

    <!-- 批量减少标签使用次数 -->
    <update id="batchDecrementUsageCount">
        UPDATE problem_tag 
        SET usage_count = GREATEST(usage_count - #{decrement}, 0),
            updated_at = CURRENT_TIMESTAMP
        WHERE id IN
        <foreach collection="tagIds" item="tagId" open="(" separator="," close=")">
            #{tagId}
        </foreach>
        AND is_deleted = 0
        AND usage_count > 0
    </update>

    <!-- 根据使用次数范围查询标签 -->
    <select id="findByUsageCountRange" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM problem_tag
        WHERE is_deleted = 0
        AND status = 1
        <if test="minUsageCount != null">
            AND usage_count >= #{minUsageCount}
        </if>        <if test="maxUsageCount != null">
            AND usage_count &lt;= #{maxUsageCount}
        </if>
        ORDER BY usage_count DESC, tag_name ASC
    </select>

    <!-- 获取标签使用统计信息 -->
    <select id="getTagUsageStatistics" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM problem_tag
        WHERE is_deleted = 0
        <if test="category != null and category != ''">
            AND category = #{category}
        </if>
        ORDER BY 
            category ASC,
            usage_count DESC,
            tag_name ASC
    </select>

    <!-- 批量更新标签状态 -->
    <update id="batchUpdateStatus">
        UPDATE problem_tag 
        SET status = #{status},
            updated_at = CURRENT_TIMESTAMP
        WHERE id IN
        <foreach collection="tagIds" item="tagId" open="(" separator="," close=")">
            #{tagId}
        </foreach>
        AND is_deleted = 0
    </update>

    <!-- 查询热门标签 -->
    <select id="findPopularTags" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM problem_tag
        WHERE is_deleted = 0 
        AND status = 1
        <if test="category != null and category != ''">
            AND category = #{category}
        </if>
        ORDER BY usage_count DESC, tag_name ASC
        LIMIT #{limit}
    </select>

    <!-- 根据颜色查询标签 -->
    <select id="findByTagColor" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM problem_tag
        WHERE is_deleted = 0
        AND tag_color = #{tagColor}
        ORDER BY usage_count DESC, tag_name ASC
    </select>

    <!-- 检查标签名是否存在（排除指定ID） -->
    <select id="existsByTagNameExcludeId" resultType="boolean">
        SELECT COUNT(1) > 0
        FROM problem_tag
        WHERE tag_name = #{tagName}
        AND is_deleted = 0
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

</mapper>
